{
 "doctype": "DocType",
 "name": "Salary Slip",
 "module": "Saral Hr",
 "autoname": "format:SS-{YYYY}-{MM}",
 "engine": "InnoDB",
 "allow_rename": 1,
 "field_order": [
  "employee","employee_name","start_date","end_date","salary_structure","currency",
  "payment_days_tab","total_working_days","column_break_puyt","absent_days",
  "earnings_and_deductions_tab","earnings_and_deductions_section","earnings",
  "total_earnings","column_break_jvyc","deductions","total_deductions"
 ],
 "fields": [
  {"fetch_from":"employee.full_name","fieldname":"employee_name","fieldtype":"Data","in_list_view":1,"label":"Employee Name"},
  {"fieldname":"end_date","fieldtype":"Date","label":"End Date"},
  {"fieldname":"salary_structure","fieldtype":"Link","label":"Salary Structure","options":"Salary Structure"},
  {"fieldname":"payment_days_tab","fieldtype":"Tab Break","label":"Payment Days"},
  {"fieldname":"total_working_days","fieldtype":"Float","label":"Working Days"},
  {"fieldname":"column_break_puyt","fieldtype":"Column Break"},
  {"fieldname":"absent_days","fieldtype":"Float","label":"Absent Days"},
  {"fieldname":"earnings_and_deductions_tab","fieldtype":"Tab Break","label":"Earnings and Deductions"},
  {"fieldname":"earnings_and_deductions_section","fieldtype":"Section Break","label":"Earnings and Deductions"},
  {"fieldname":"earnings","fieldtype":"Table","label":"Earnings","options":"Salary Details"},
  {"fieldname":"deductions","fieldtype":"Table","label":"Deductions","options":"Salary Details"},
  {"fieldname":"employee","fieldtype":"Link","label":"Employee ","options":"Company Link"},
  {"default":"INR","fieldname":"currency","fieldtype":"Link","label":"Currency","options":"Currency"},
  {"fieldname":"column_break_jvyc","fieldtype":"Column Break"},
  {"fieldname":"start_date","fieldtype":"Date","in_list_view":1,"label":"Start Date","reqd":1},
  {"fieldname":"total_earnings","fieldtype":"Data","label":"Total Earnings"},
  {"fieldname":"total_deductions","fieldtype":"Data","label":"Total Deductions"}
 ],
 "permissions":[
  {"role":"System Manager","read":1,"write":1,"create":1,"delete":1,"email":1,"print":1,"report":1,"share":1,"export":1}
 ]
}
